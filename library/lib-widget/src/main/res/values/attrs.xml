<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Widget_MIDrawerView">
        <eat-comment />
        <attr name="widget_sliderType">
            <enum name="scroll" value="1"/>
            <enum name="doorIn" value="2"/>
            <enum name="doorOut" value="3"/>
            <enum name="slide" value="4"/>
        </attr>
    </declare-styleable>

    <!-- BannerView -->
    <declare-styleable name="Widget_BannerView">
        <!-- 是否显示指示器 -->
        <attr name="widget_showIndicator" format="boolean" />
        <!-- 指示器背景 -->
        <attr name="widget_indicatorBackground" format="reference|color" />
        <!-- 指示器 -->
        <attr name="widget_indicatorDrawable" format="reference" />
        <!-- 指示器高度 -->
        <attr name="widget_indicatorHeight" format="dimension" />
        <!-- 指示器间距 -->
        <attr name="widget_indicatorSpacing" format="dimension" />
        <!-- 指示器的位置 -->
        <attr name="widget_indicatorGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 指示器左内边距 -->
        <attr name="widget_indicatorPaddingStart" format="dimension" />
        <!-- 指示器右内边距 -->
        <attr name="widget_indicatorPaddingEnd" format="dimension" />
        <!-- 指示器左外边距 -->
        <attr name="widget_indicatorMarginStart" format="dimension" />
        <!-- 指示器右外边距 -->
        <attr name="widget_indicatorMarginEnd" format="dimension" />
        <!-- 指示器上外边距 -->
        <attr name="widget_indicatorMarginTop" format="dimension" />
        <!-- 指示器下外边距 -->
        <attr name="widget_indicatorMarginBottom" format="dimension" />

        <!-- 是否是数字指示器 -->
        <attr name="widget_isNumberIndicator" format="boolean" />
        <!-- 数字指示器文字颜色 -->
        <attr name="widget_numberIndicatorTextColor" format="reference|color" />
        <!-- 数字指示器文字大小 -->
        <attr name="widget_numberIndicatorTextSize" format="dimension" />

        <!-- 是否开启自动轮播 -->
        <attr name="widget_autoplay" format="boolean" />
        <!-- 是否开启循环播放 -->
        <attr name="widget_loopPlay" format="boolean" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="widget_autoplayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="widget_pageChangeDuration" format="integer" />
        <attr name="widget_pageLimit" format="integer" />
        <!-- 页面区域距离 BannerView 顶部的距离 -->
        <attr name="widget_pagePaddingTop" format="dimension" />
        <!-- 页面区域距离 BannerView 底部的距离 -->
        <attr name="widget_pagePaddingBottom" format="dimension" />
        <!-- 页面区域距离 BannerView 左边的距离 -->
        <attr name="widget_pagePaddingStart" format="dimension" />
        <!-- 页面区域距离 BannerView 右边 的距离 -->
        <attr name="widget_pagePaddingEnd" format="dimension" />

        <!-- 是否显示文本 -->
        <attr name="widget_showDisplayText" format="boolean" />
        <!-- 文本颜色 -->
        <attr name="widget_displayTextColor" format="reference|color" />
        <!-- 文本大小 -->
        <attr name="widget_displayTextSize" format="dimension" />
        <!-- 文本最多显示行数 -->
        <attr name="widget_displayTextLines" format="integer" />
        <!-- 文本style Default text typeface style. -->
        <attr name="widget_displayTextStyle"  format="integer">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- 文本背景 -->
        <attr name="widget_displayTextBackground" format="reference|color" />
        <!-- 文本背景高度 -->
        <attr name="widget_displayTextBgHeight" format="dimension" />
        <attr name="widget_displayTextMarginTop" format="dimension" />
        <attr name="widget_displayTextMarginBottom" format="dimension" />
        <attr name="widget_displayTextPaddingStart" format="dimension" />
        <attr name="widget_displayTextPaddingEnd" format="dimension" />
        <!-- 文本相对于父布局的位置 -->
        <attr name="widget_displayTextLayoutGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
        </attr>
        <!-- 文本内部的位置 -->
        <attr name="widget_displayTextGravity" format="integer">
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>

    </declare-styleable>
</resources>