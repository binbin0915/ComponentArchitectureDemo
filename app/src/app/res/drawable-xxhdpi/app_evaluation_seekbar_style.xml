<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_orange_A100"
                android:centerY="0.75"
                android:endColor="@color/color_orange_A100"
                android:startColor="@color/color_orange_A100" />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <solid android:color="@color/color_orange_A100"/>
            </shape>
        </clip>

    </item>
</layer-list>