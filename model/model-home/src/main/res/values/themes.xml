<resources>
    <!-- Base application theme. -->
    <style name="HomeTheme.BaseApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/home_purple_500</item>
        <item name="colorPrimaryVariant">@color/home_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/home_teal_200</item>
        <item name="colorSecondaryVariant">@color/home_teal_700</item>
        <item name="colorOnSecondary">@color/home_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>