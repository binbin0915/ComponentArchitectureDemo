<resources>
    <!--闪屏页日间模式的主题-->
    <style name="SplashTheme.BaseApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/splash_purple_500</item>
        <item name="colorPrimaryVariant">@color/splash_purple_700</item>
        <item name="colorOnPrimary">@color/splash_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/splash_teal_200</item>
        <item name="colorSecondaryVariant">@color/splash_teal_700</item>
        <item name="colorOnSecondary">@color/splash_black</item>
        <!--布局的背景色-->
        <item name="android:windowBackground">@color/splash_white</item>
        <!--状态栏颜色-->
        <item name="android:statusBarColor" >@color/splash_white</item>
        <!--导航栏颜色-->
        <item name="android:navigationBarColor">@color/splash_white</item>
    </style>
</resources>